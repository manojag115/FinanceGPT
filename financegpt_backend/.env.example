# ==============================================================================
# CORE CONFIGURATION
# ==============================================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/financegpt

# Redis & Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Electric (for database migrations only)
ELECTRIC_DB_USER=electric
ELECTRIC_DB_PASSWORD=electric_password

# Periodic task interval (1m, 5m, 10m, 1h, 2h)
SCHEDULE_CHECKER_INTERVAL=5m

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# Frontend URL
NEXT_FRONTEND_URL=http://localhost:3000

# Backend URL (optional, set when behind reverse proxy with HTTPS)
# BACKEND_URL=https://api.yourdomain.com

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# Auth Type: LOCAL or GOOGLE
AUTH_TYPE=LOCAL
REGISTRATION_ENABLED=TRUE

# Google OAuth (only needed if AUTH_TYPE=GOOGLE)
# GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
# GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# ==============================================================================
# FINANCIAL DATA INTEGRATION
# ==============================================================================

# Plaid Configuration (for bank/brokerage account connections)
# Get credentials from: https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox
PLAID_REDIRECT_URI=http://localhost:8000/api/v1/plaid/oauth-redirect

# ==============================================================================
# AI/ML CONFIGURATION
# ==============================================================================

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Rerankers (optional, for improved search results)
RERANKERS_ENABLED=FALSE
# RERANKERS_MODEL_NAME=ms-marco-MiniLM-L-12-v2
# RERANKERS_MODEL_TYPE=flashrank

# ==============================================================================
# DOCUMENT PROCESSING
# ==============================================================================

# File Parser Service: UNSTRUCTURED or DOCLING
ETL_SERVICE=UNSTRUCTURED

# Unstructured API (if ETL_SERVICE=UNSTRUCTURED)
# UNSTRUCTURED_API_KEY=your_key_here

# Llama Cloud API (if ETL_SERVICE=DOCLING)
# LLAMA_CLOUD_API_KEY=your_key_here

# Maximum pages per user (default: unlimited)
PAGES_LIMIT=500

# ==============================================================================
# VOICE SERVICES (OPTIONAL)
# ==============================================================================

# Text-to-Speech: local/kokoro or LiteLLM provider
TTS_SERVICE=local/kokoro
# TTS_SERVICE_API_KEY=
# TTS_SERVICE_API_BASE=

# Speech-to-Text: local/base or LiteLLM provider
STT_SERVICE=local/base
# STT_SERVICE_API_KEY=
# STT_SERVICE_API_BASE=

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Uvicorn Server Settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_LOG_LEVEL=info

# ==============================================================================
# OPTIONAL: OBSERVABILITY
# ==============================================================================

# LangSmith (for LLM observability and debugging)
# LANGSMITH_TRACING=true
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_API_KEY=lsv2_pt_your_key_here
# LANGSMITH_PROJECT=financegpt

# ==============================================================================
# OPTIONAL: GOOGLE CONNECTORS
# ==============================================================================

# Google Drive/Gmail/Calendar connectors (if using Composio for Google services)
# GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/calendar/connector/callback
# GOOGLE_GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/gmail/connector/callback
# GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/drive/connector/callback

# ==============================================================================
# OPTIONAL: COMPOSIO (for additional integrations)
# ==============================================================================

# Composio enables additional app integrations (Slack, Notion, etc.)
# COMPOSIO_API_KEY=your_composio_key_here
# COMPOSIO_ENABLED=FALSE
# COMPOSIO_REDIRECT_URI=http://localhost:8000/api/v1/auth/composio/connector/callback
